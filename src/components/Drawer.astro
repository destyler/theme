---
import { getRelativeLocaleUrl } from 'astro:i18n'
import userConfig from 'virtual:starlight-theme-destyler-config'
import { getTranslation } from './NavBar.astro'

const { siteTitleHref, sidebar } = Astro.locals.starlightRoute
---

<div popover="auto" id="drawer">
  <button class="sheet-overlay" popovertarget="drawer" popovertargetaction="hide"></button>
  <div class="content">
    <div class="header">
      <button class="drag-icon" popovertarget="drawer" popovertargetaction="hide"><span></span></button>
    </div>
    <div class="body">
      <div class="links-nav">
        <a href={siteTitleHref}>Home</a>
        {
          userConfig.navLinks?.map((nav) => {
            const absoluteLinkRegex = /^https?:\/\//

            const link
              = !absoluteLinkRegex.test(nav.link) && Astro.currentLocale
                ? getRelativeLocaleUrl(Astro.currentLocale, nav.link)
                : nav.link
            const label = typeof nav.label === 'string' ? nav.label : getTranslation(nav.label, nav.link, 'label')

            return (
              <a href={link} {...nav.attrs}>
                {label}
                {nav.badge && <span class="badge">{nav.badge}</span>}
              </a>
            )
          })
        }
      </div>

      <div class="links-docs">
        {
          sidebar.map(
            entry =>
              entry.type !== 'link' && (
                <div class="container-sidebar-entry">
                  <h4 class="entry-title">{entry.label}</h4>

                  {entry.entries.map(
                    link =>
                      link.type === 'link' && (
                        <a href={link.href} {...link.attrs}>
                          {link.label}
                        </a>
                      ),
                  )}
                </div>
              ),
          )
        }
      </div>
    </div>
  </div>
</div>

<style>
  button {
    all: unset;
  }

  [popover] {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    opacity: 0;
    pointer-events: none;
    align-items: center;
    flex-direction: column;
    justify-content: flex-end;
    z-index: 1000;
    border-color: none;
    transition: 0.1s linear;
    background: transparent;
  }

  [popover]::backdrop {
    background: rgba(0, 0, 0, 0.8);
  }

  [popover]:popover-open {
    opacity: 1;
    pointer-events: auto;
  }

  [popover]:popover-open .content {
    --un-translate-y: 0%;
    transform: translateX(var(--un-translate-x)) translateY(var(--un-translate-y))
      translateZ(var(--un-translate-z)) rotate(var(--un-rotate))
      rotateX(var(--un-rotate-x)) rotateY(var(--un-rotate-y))
      rotateZ(var(--un-rotate-z)) skewX(var(--un-skew-x)) skewY(var(--un-skew-y))
      scaleX(var(--un-scale-x)) scaleY(var(--un-scale-y))
      scaleZ(var(--un-scale-z));
  }

  .sheet-overlay {
    position: fixed;
    z-index: -1;
    width: 100vw;
    height: 100vh;
    opacity: 0.1;
    left: 0;
    top: 0;
    background-color: transparent;
  }

  .content {
    --un-bg-opacity: 1;
    background-color: hsl(var(--background) / var(--un-bg-opacity));
    width: 100%;
    position: relative;
    max-height: 100vh;
    height: 50vh;
    max-width: 1150px;
    --un-translate-y: 100%;
    transform: translateX(var(--un-translate-x)) translateY(var(--un-translate-y))
      translateZ(var(--un-translate-z)) rotate(var(--un-rotate))
      rotateX(var(--un-rotate-x)) rotateY(var(--un-rotate-y))
      rotateZ(var(--un-rotate-z)) skewX(var(--un-skew-x)) skewY(var(--un-skew-y))
      scaleX(var(--un-scale-x)) scaleY(var(--un-scale-y))
      scaleZ(var(--un-scale-z));
    --un-shadow: 0 10px 20px var(--un-shadow-color, rgba(0, 0, 0, 0.03));
    box-shadow: var(--un-ring-offset-shadow), var(--un-ring-shadow),
      var(--un-shadow);
    border-radius: 12px 12px 0 0;
    transition: 0.3s ease;
  }

  .header {
    display: flex;
    justify-content: center;
  }

  .header .drag-icon span {
    display: block;
    width: 6.25rem;
    height: 0.1rem;
    --un-bg-opacity: 1;
    background-color: hsl(var(--muted) / var(--un-bg-opacity));
    border-radius: 9999px;
    margin-top: 1rem;
  }

  .body {
    height: 100%;
    overflow-y: auto;
    padding: 1.5rem;
  }

  .body::-webkit-scrollbar {
    width: 0;
  }

  .links-nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .links-nav a {
    font-size: 1rem;
    line-height: 1.5rem;
    line-height: 1.5rem;
    color: inherit;
    text-decoration: inherit;
  }

  .links-docs {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .container-sidebar-entry {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 1.5rem;
  }

  .entry-title {
    font-weight: 500;
  }

  .container-sidebar-entry a {
    font-size: 1rem;
    line-height: 1.5rem;
    line-height: 1.5rem;
    text-decoration: inherit;
    --un-text-opacity: 1;
    color: hsl(var(--muted-foreground) / var(--un-text-opacity));
  }

  .badge {
    text-decoration: none;
    line-height: 1rem;
    line-height: 1;
    margin-left: 0.5rem;
    padding-left: 0.375rem;
    padding-right: 0.375rem;
    padding-top: 0.125rem;
    padding-bottom: 0.125rem;
    border-radius: calc(var(--radius) - 2px);
    background: #adfa1d;
    font-weight: 400;
    --un-text-opacity: 1;
    color: rgb(0 0 0 / var(--un-text-opacity));
    font-size: 0.75rem;
    line-height: 1rem;
  }
</style>
