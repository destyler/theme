---
import type { HTMLAttributes } from 'astro/types'

interface Props extends Omit<HTMLAttributes<'a'>, 'href'> {
  href: string | URL
  variant?: 'primary' | 'secondary' | 'minimal'
}

const { variant = 'primary', ...attrs } = Astro.props
---

<a class:list={variant} {...attrs}>
  <slot />
</a>

<style>
  a {
    --un-text-opacity: 1;
    color: hsl(var(--primary-foreground) / var(--un-text-opacity));
    font-weight: 500;
    font-size: 0.75rem;
    line-height: 1rem;
    line-height: 1rem;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    white-space: nowrap;
    gap: 0.5rem;
    justify-content: center;
    align-items: center;
    height: 2rem;
    display: inline-flex;
    transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 0.15s;
    border-radius: calc(var(--radius) - 2px);
    text-decoration: inherit;
  }

  .primary {
    --un-bg-opacity: 1;
    background-color: hsl(var(--primary) / var(--un-bg-opacity));
  }

  .primary:hover {
    background-color: hsl(var(--primary) / 0.9);
  }

  .secondary {
    --un-bg-opacity: 1;
    background-color: hsl(var(--secondary) / var(--un-bg-opacity));
    --un-text-opacity: 1;
    color: hsl(var(--secondary-foreground) / var(--un-text-opacity));
  }

  .secondary:hover {
    background-color: hsl(var(--secondary) / 0.8);
  }

  .minimal {
    --un-text-opacity: 1;
    color: hsl(var(--accent-foreground) / var(--un-text-opacity));
  }

  .minimal:hover {
    --un-text-opacity: 1;
    color: hsl(var(--accent-foreground) / var(--un-text-opacity));
    --un-bg-opacity: 1;
    background-color: hsl(var(--accent) / var(--un-bg-opacity));
  }
</style>
